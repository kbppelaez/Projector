@model SignInViewModel

@{
    ViewData["Title"] = "Sign In";
}
<main role="main" class="flex h-screen min-h-full flex-col justify-center bg-gray-100">
    <div class="flex flex-col flex-grow place-content-center justify-center">
        <div class="flex flex-row w-full max-w-10xl pb-10 lg:py-12 lg:px-8 place-content-center">
            <div class="pr-card w-full max-w-sm">
                <div class="pr-card-header">
                    <h3>Sign In</h3>
                    <p>New user? <a asp-controller="Users" asp-action="Register" class="pr-btn-link">Create an account.</a></p>
                </div>
                <form method="POST" asp-controller="Users" asp-action="SignIn" class="w-full">
                    <div class="pr-card-content">
                        <div class="w-full">
                            <!-- ERRORS -->
                            @if (Model.Errors.Any())
                            {
                                <div role="alert">
                                    @foreach (var error in Model.Errors)
                                    {
                                        <span class="error-message">@error</span>
                                    }
                                </div>
                            }

                            <!-- INPUT FIELDS -->
                            <partial name="_SignInInput" model="Model.User" />
                        </div>
                    </div>
                <!-- BUTTON -->
                    <div class="pr-card-footer">
                        <input type="submit" value="Log In" class="pr-btn-primary w-full min-w-full" />
                        <a class="pr-btn-link" asp-controller="Users" asp-action="ForgotPassword">Forgot Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
