@using Projector.Core.Users.DTO
@model NewUserData

<div class="pr-form-field">
    <div class="pr-form-item">
        <label class="pr-form-item-label" asp-for="@Model.UserName"></label>
        <input class="pr-input" asp-for="@Model.UserName" />
        <span class="pr-form-message" asp-validation-for="@Model.UserName"></span>
    </div>
    <div class="pr-form-item">
        <label class="pr-form-item-label" asp-for="@Model.Password"></label>
        <input class="pr-input" asp-for="@Model.Password" />
        <span class="pr-form-message" asp-validation-for="@Model.Password"></span>
    </div>
    <div class="pr-form-item">
        <label class="pr-form-item-label" asp-for="@Model.ConfirmPassword"></label>
        <input class="pr-input" asp-for="@Model.ConfirmPassword" />
        <span class="pr-form-message" asp-validation-for="@Model.ConfirmPassword"></span>
    </div>
    <div class="pr-form-item">
        <label class="pr-form-item-label" asp-for="@Model.FirstName"></label>
        <input class="pr-input" asp-for="@Model.FirstName" />
        <span class="pr-form-message" asp-validation-for="@Model.FirstName"></span>
    </div>
    <div class="pr-form-item">
        <label class="pr-form-item-label" asp-for="@Model.LastName"></label>
        <input class="pr-input" asp-for="@Model.LastName" />
        <span class="pr-form-message" asp-validation-for="@Model.LastName"></span>
    </div>
</div>
