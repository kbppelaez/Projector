@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Create New Password";
}

<main role="main" class="flex h-screen min-h-full flex-col justify-center bg-gray-100">
    <div class="flex flex-col flex-grow place-content-center justify-center">
        <div class="flex flex-row w-full max-w-10xl pb-10 lg:py-12 lg:px-8 place-content-center">
            <div class="pr-card w-full max-w-sm">
                <div class="pr-card-header">
                    <h3 class="pr-card-title">Create Password</h3>
                    <p class="pr-card-description">Create a password for your account.</p>
                </div>
                <form class="w-full" method="POST" asp-controller="Users" asp-action="CreatePassword">
                    <div class="pr-card-content">
                        <div class="w-full">
                            @if (Model.Errors.Any())
                            {
                                <div role="alert" class="pr-form-message">
                                    @foreach (var error in Model.Errors)
                                    {
                                        <span>@error</span>
                                    }
                                </div>
                            }

                            <partial name="_NewPasswordInput" model="@Model.NewPassword" />
                        </div>
                    </div>

                    <div class="pr-card-footer">
                        <input type="submit" value="Create Password" class="pr-btn-primary w-full" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>