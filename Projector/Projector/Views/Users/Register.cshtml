@model RegisterViewModel

@{
    ViewData["Title"] = "Register User";
}

<main role="main" class="flex h-screen min-h-full flex-col justify-center bg-gray-100">
    <div class="flex flex-col flex-grow place-content-center justify-center">
        <div class="flex flex-row w-full max-w-10xl pb-10 lg:py-12 lg:px-8 place-content-center">
            <div class="card w-96 bg-base-100 shadow-xl">
                <div class="card-body">
                    <h1 class="AuthenticationCardTitle">REGISTER</h1>
                    <div class="card-actions w-full">
                        <!--ERRORS-->
                        @if (Model.Errors.Any())
                        {
                            <div role="alert" class="AuthenticationError">
                                <ul>
                                    @foreach (var error in Model.Errors)
                                    {
                                        <li class="AuthenticationError">@error</li>
                                    }
                                </ul>
                            </div>
                        }

                        <!--FORM-->
                        <div class="w-full place-content-center">
                            <partial name="_RegisterInput" model="Model.NewUser" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>