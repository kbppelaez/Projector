@{
    ViewData["Title"] = "Forgot Password";
}

<h2>Forgot Password Request</h2>
<form method="POST" asp-controller="Users" asp-action="ForgotPassword">
    <div class="form-group">
        <label for="emailAdd">Email Address</label>
        <input name="emailAdd" type="email" class="form-control" />
    </div>
    <br />
    <input type="submit" value="Forgot Password" class="btn btn-primary" />
</form>
