@model CreatePersonViewModel

@{
    ViewData["Title"] = "Create New Person";
    Layout = "_Authenticated";
}

<div class="flex flex-col w-full">
    @if (Model.Errors.Any())
    {
        <div class="FormError" role="alert">
            <strong class="FormErrorHeader">Errors occured.</strong>
            <ul>
                @foreach (var error in Model.Errors)
                {
                    <li class="FormErrorContent">@error</li>
                }
            </ul>
        </div>
    }

    <div class="flex-grow w-full">
        <form method="POST" asp-controller="Persons" asp-action="Create">
            <partial name="_CreatePersonInput" model="@Model.NewPerson" />
            <div class="form-group">
                <input type="submit" value="Create" class="Primary FormButton" />
                <a asp-controller="Persons" asp-action="Persons" class="Neutral FormButton">Cancel</a>
            </div>
        </form>
    </div>
</div>