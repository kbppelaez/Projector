@model CreatePersonViewModel

@{
    ViewData["Title"] = "Create New Person";
    Layout = "_Authenticated";
}

<div class="flex flex-col w-full">
    @if (Model.Errors.Any())
    {
        <div class="rounded p-4 bg-red-200 flex-grow w-full" role="alert">
            <strong class="text-xl">Errors occured.</strong>
            <ul>
                @foreach (var error in Model.Errors)
                {
                    <li class="text-lg">@error</li>
                }
            </ul>
        </div>
    }

    <div class="flex-grow w-full">
        <form method="POST" asp-controller="Persons" asp-action="Create">
            <partial name="_CreatePersonInput" model="@Model.NewPerson" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>