@model EditPersonViewModel

@{
    ViewData["Title"] = "Create New Person";
    Layout = "_Authenticated";
}

<div class="flex flex-col w-full">
    <div class="pr-breadcrumbs">
        <ul>
            <li><a asp-controller="Persons" asp-action="Persons">People</a></li>
            <li><a asp-controller="Persons" asp-action="Details" asp-route-personId="@Model.PersonId">@Model.EditableValues.FirstName &nbsp; @Model.EditableValues.LastName</a></li>
            <li>Edit Information</li>
        </ul>
    </div>
    @if (Model.Errors.Any())
    {
        <div class="pr-form-message" role="alert">
            @foreach (var error in Model.Errors)
            {
                <span>@error</span>
            }
        </div>
    }

    <div class="flex-grow w-full">
        <form method="POST" asp-controller="Persons" asp-action="Edit">
            <div class="pr-form-field pl-5">
                <div>
                    <div class="pr-form-header">
                        Modify Member Details
                    </div>
                    <div class="pr-form-header-description">
                        Change information related to a person here.
                    </div>
                </div>

                <div class="divider"></div>
                <partial name="_CreatePersonInput" model="@Model.EditableValues" />

                <div class="mt-5">
                    <input type="submit" value="Modify Account Details" class="pr-btn-primary" />
                    <a asp-controller="Persons" asp-action="Details" asp-route-personId="@Model.PersonId" class="pr-btn-secondary">View Member Details</a>
                </div>
            </div>
        </form>
    </div>
</div>
