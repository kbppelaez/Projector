@model EditProjectViewModel

@{
    ViewData["Title"] = "Edit Project";
    Layout = "_Authenticated";
}

<div class="flex flex-col w-full">
    @if (Model.Errors.Any())
    {
        <div class="rounded p-4 bg-red-200 flex-grow w-full" role="alert">
            <strong class="text-xl">Errors occured.</strong>
            <ul>
                @foreach (var error in Model.Errors)
                {
                    <li class="text-lg">@error</li>
                }
            </ul>
        </div>
    }

    <div class="flex-grow w-full">
        <form method="POST" asp-controller="Projects" asp-action="Edit">
                <partial name="_CreateProjectInput" model="@Model.Project" />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-secondary" />
                <a asp-controller="Projects" asp-action="ProjectDetails" asp-route-projectId="@Model.Project.Id" class="btn btn-neutral">Cancel</a>
            </div>
        </form>
    </div>
</div>
