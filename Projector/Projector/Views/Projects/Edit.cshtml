@model EditProjectViewModel

@{
    ViewData["Title"] = "Edit Project";
    Layout = "_Authenticated";
}

<div class="flex flex-col w-full">
    @if (Model.Errors.Any())
    {
        <div class="FormError" role="alert">
            <strong class="FormErrorHeader">Errors occured.</strong>
            <ul>
                @foreach (var error in Model.Errors)
                {
                    <li class="FormErrorContent">@error</li>
                }
            </ul>
        </div>
    }

    <div class="flex-grow w-full">
        <form method="POST" asp-controller="Projects" asp-action="Edit">
                <partial name="_CreateProjectInput" model="@Model.Project" />
            <div class="form-group">
                <input type="submit" value="Edit" class="Primary FormButton" />
                <a asp-controller="Projects" asp-action="ProjectDetails" asp-route-projectId="@Model.Project.Id" class="Neutral FormButton">Cancel</a>
            </div>
        </form>
    </div>
</div>
