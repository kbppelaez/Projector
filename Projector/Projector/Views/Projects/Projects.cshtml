@using System.Globalization;
@model ProjectsListViewModel

@{
    ViewData["Title"] = "Home Page";
}

<form method="GET" asp-controller="Projects" asp-action="Projects">
    <div class="input-group mb-3">
        @if (Model.Args == null || string.IsNullOrEmpty(Model.Args.Term))
        {
            <input type="text" class="form-control" value="" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2" name="term">
        }
        else
        {
            <input type="text" class="form-control" value="@Model.Args.Term" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2" name="term">
        }
        <div class="input-group-append">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </div>
</form>

@if (Model.Results.TotalProjects == 0)
{
    <div align="center">
        <h2>No Projects Available</h2>
    </div>
}
else
{
    <div class="list-group" id="list-tab" role="tablist">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">CODE</th>
                    <th scope="col">PROJECT NAME</th>
                    <th scope="col">BUDGET</th>
                    <th scope="col">REMARKS</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Results.Projects)
                {
                    <tr>
                        <th scope="row">@item.Code</th>
                        <td>@item.Name</td>
                        <td>@item.Budget.ToString("C2", CultureInfo.CurrentCulture)</td>
                        <td>@item.Remarks</td>
                        <td>
                            <a asp-controller="Projects" asp-action="Assignments" asp-route-projectId="@item.Id" class="btn btn-primary">Details</a>
                            <a asp-controller="Projects" asp-action="Edit" asp-route-projectId="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-controller="Projects" asp-action="Delete" asp-route-projectId="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
    <div>
        <div>
            <nav aria-label="pagination">
                <ul class="pagination">
                    @if(Model.PageArgs.Count > 0)
                    {
                        @for(int i=0; i<Model.PageArgs.Count; i += 1)
                        {
                            //if previous button
                            if(i==0 && Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a asp-controller="Projects" asp-action="Projects" asp-all-route-data="@Model.PageArgs[i]" class="page-link">Previous</a>
                                </li>
                                continue;
                            }
                            //if current page
                            if(Model.Args.Page.ToString() == Model.PageArgs[i]["Page"])
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">@Model.Args.ViewPage</a>
                                </li>
                                continue;
                            }
                            //if next button
                            if(i==Model.PageArgs.Count-1 && Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a asp-controller="Projects" asp-action="Projects" asp-all-route-data="@Model.PageArgs[i]" class="page-link">Next</a>
                                </li>
                                continue;
                            }

                            <li class="page-item">
                                <a asp-controller="Projects" asp-action="Projects" asp-all-route-data="@Model.PageArgs[i]" class="page-link">@Model.GetPageNumber(Model.PageArgs[i]["Page"])</a>
                            </li>
                        }
                    }
                </ul>
            </nav>
            <a asp-controller="Projects" asp-action="Projects" asp-route-PageSize="5" asp-route-Term="@Model.Args.Term">View 5</a>
            <a asp-controller="Projects" asp-action="Projects" asp-route-PageSize="10" asp-route-Term="@Model.Args.Term">View 10</a>
        </div>
    </div>
}
