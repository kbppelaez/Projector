@using System.Globalization;
@model ProjectsListViewModel

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Authenticated";
}

<div class="flex flex-col w-full space-y-4">
    <form method="GET" asp-controller="Projects" asp-action="Projects" class="flex flex-grow w-full">
        <div class="SearchBar join">
            @if(Model.Args == null || string.IsNullOrEmpty(Model.Args.Term))
            {
                <input type="text" value="" name="term"
                    class="SearchBar join-item" placeholder="Search Project" />
            }else{
                <input type="text" value="@Model.Args.Term" name="term"
                    class="SearchBar" placeholder="Search Project" />
            }
            <input type="submit" class="SearchBar join-item" value="Search">
        </div>
    </form>
    
    @if(Model.Results.TotalProjects == 0)
    {
        <div align="center">
            <h2 class="empty-table">No Projects Available</h2>
        </div>
    }
    else
    {
        <div class="pr-table">
            <table class="pr-table">
                <thead class="pr-table-header">
                    <tr class="pr-table-row">
                        <th class="pr-table-head">Code</th>
                        <th class="pr-table-head">Name</th>
                        <th class="pr-table-head">Remarks</th>
                        <th class="pr-table-head">Budget</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="pr-table-body">
                    @foreach(var item in Model.Results.Projects){
                        <tr class="pr-table-row">
                            <td class="pr-table-cell">@item.Code</td>
                            <td class="pr-table-cell">@item.Name</td>
                            <td class="pr-table-cell">@item.Remarks</td>
                            <td class="pr-table-cell text-right">@item.Budget.ToString("C2", CultureInfo.CurrentCulture)</td>
                            <td class="pr-table-cell max-w-fit">
                                <span class="inline-block flex w-full justify-center gap-2">
                                    <!--Info-->
                                    <a asp-controller="Projects" asp-action="ProjectDetails" asp-route-projectId="@item.Id">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" class="inline-block w-6 h-6 pr-btn-icon">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
                                        </svg>
                                    </a>
                                    <!--Edit-->
                                    <a asp-controller="Projects" asp-action="Edit" asp-route-projectId="@item.Id">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" class="inline-block pr-btn-icon w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                        </svg>

                                    </a>
                                    <!--Delete-->
                                    <a asp-controller="Projects" asp-action="ConfirmDelete" asp-route-projectId="@item.Id">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" class="w-6 h-6 inline-block pr-btn-icon-warning">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                        </svg>
                                    </a>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.PageArgs.Count > 0)
        {
            <div class="flex flex-grow w-full">
                <div class="flex flex-grow w-full">
                    <div class="flex flex-grow gap-2">
                        <a asp-controller="Projects" asp-action="Projects" asp-route-PageSize="5" asp-route-Term="@Model.Args.Term" class="pr-btn-primary">View 5</a>
                        <a asp-controller="Projects" asp-action="Projects" asp-route-PageSize="10" asp-route-Term="@Model.Args.Term" class="pr-btn-outline">View 10</a>
                    </div>
                    <div class="join max-w-fit">
                        @for(int i=0; i<Model.PageArgs.Count; i += 1)
                        {
                            //if previous button
                            if(i==0 && Model.HasPreviousPage)
                            {
                                <a asp-controller="Projects" asp-action="Projects" asp-all-route-data="@Model.PageArgs[i]" class="join-item pr-btn-outline">
                                    <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4">
                                        <path d="M8.84182 3.13514C9.04327 3.32401 9.05348 3.64042 8.86462 3.84188L5.43521 7.49991L8.86462 11.1579C9.05348 11.3594 9.04327 11.6758 8.84182 11.8647C8.64036 12.0535 8.32394 12.0433 8.13508 11.8419L4.38508 7.84188C4.20477 7.64955 4.20477 7.35027 4.38508 7.15794L8.13508 3.15794C8.32394 2.95648 8.64036 2.94628 8.84182 3.13514Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                                continue;
                            }
                            //if current page
                            if (Model.Args.Page.ToString() == Model.PageArgs[i]["Page"])
                            {
                                <a class="join-item pr-btn-outline" disabled>@Model.Args.ViewPage</a>
                                continue;
                            }
                            // if next button
                            if(i==Model.PageArgs.Count-1 && Model.HasNextPage)
                            {
                                <a asp-controller="Projects" asp-action="Projects" asp-all-route-data="@Model.PageArgs[i]" class="join-item pr-btn-outline">
                                    <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4">
                                        <path d="M6.1584 3.13508C6.35985 2.94621 6.67627 2.95642 6.86514 3.15788L10.6151 7.15788C10.7954 7.3502 10.7954 7.64949 10.6151 7.84182L6.86514 11.8418C6.67627 12.0433 6.35985 12.0535 6.1584 11.8646C5.95694 11.6757 5.94673 11.3593 6.1356 11.1579L9.565 7.49985L6.1356 3.84182C5.94673 3.64036 5.95694 3.32394 6.1584 3.13508Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                                continue;
                            }

                            <a asp-controller="Projects" asp-action="Projects" asp-all-route-data="@Model.PageArgs[i]" class="join-item pr-btn-outline">@Model.GetPageNumber(Model.PageArgs[i]["Page"])</a>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>
