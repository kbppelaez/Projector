@model CreateProjectViewModel

@{
    ViewData["Title"] = "Create New Project";
    Layout = "_Authenticated";
}
<div class="flex flex-col w-full space-y-4">
    @if (Model.Errors.Any())
    {
        <div class="pr-form-message" role="alert">
            @foreach (var error in Model.Errors)
            {
                <span>@error</span>
            }
        </div>
    }

    <div class="flex-grow w-full">
        <form method="POST" asp-controller="Projects" asp-action="Create">
            <div class="pr-form-field pl-5">

                <div>
                    <div class="pr-form-header">
                        New Project
                    </div>
                    <div class="pr-form-header-description">
                        Add a new project for your team.
                    </div>
                </div>
                <div class="divider"></div>
                <partial name="_CreateProjectInput" model="@Model.Project" />
                <div class="mt-5">
                    <input type="submit" value="Create Project" class="pr-btn-primary" />
                    <a asp-controller="Projects" asp-action="Projects" class="pr-btn-secondary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>