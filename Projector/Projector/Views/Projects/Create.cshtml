@model CreateProjectViewModel

@{
    ViewData["Title"] = "Create New Project";
    Layout = "_Authenticated";
}


<div class="flex flex-col w-full">
    @if (Model.Errors.Any())
    {
        <div class="FormError" role="alert">
            <strong class="FormErrorHeader">Errors occured.</strong>
            <ul>
                @foreach (var error in Model.Errors)
                {
                    <li class="FormErrorContent">@error</li>
                }
            </ul>
        </div>
    }

    <div class="flex-grow w-full">
        <form method="POST" asp-controller="Projects" asp-action="Create">
            <partial name="_CreateProjectInput" model="@Model.Project" />
            <div class="form-group">
                <input type="submit" value="Create" class="FormButton Primary" />
                <a asp-controller="Projects" asp-action="Projects" class="Neutral FormButton">Back to List</a>
            </div>
        </form>
    </div>
</div>
