@using Projector.Core.Projects
@using System.Globalization;
@model ProjectData

<form method="POST" asp-controller="Projects" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="Code"><b>Project Code</b></label>
        <input asp-for="@Model.Code" class="form-control" />
        <span asp-validation-for="@Model.Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Name"><b>Project Name</b></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Budget"><b>Budget</b></label><br />
        <div class="input-group mb-3 form-group">
            <div class="input-group-prepend">
                <span class="input-group-text">@NumberFormatInfo.CurrentInfo.CurrencySymbol</span>
            </div>
            <input asp-for="@Model.BudgetString" type="text" class="form-control" aria-label="Amount">
            <div class="input-group-append">
                <span class="input-group-text">.00</span>
            </div>
            <span asp-validation-for="@Model.BudgetString" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="Remarks"><b>Remarks</b></label>
        <textarea asp-for="@Model.Remarks" class="form-control" rows="5"></textarea>
        <span asp-validation-for="@Model.Remarks" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>