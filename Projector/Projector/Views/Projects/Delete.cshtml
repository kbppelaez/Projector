@using System.Globalization;
@model DeleteProjectViewModel

@{
    ViewData["Title"] = "Delete Project";
    var EmptyRemarks = "None";
    Layout = "_Authenticated";
}

<div class="flex flex-col w-full h-full space-y-4">
    <div class="card card-compact flex-grow bg-red-100 shadow w-full ">
        <div class="card-body bg-red-100">
            <h2 class="card-title">Are you really sure you want to delete this project?</h2>
            <p>This project will then be removed from each assigned employee's project list.</p>
        </div>
    </div>
    <div>
        <h2 class="card-title">@Model.Project.Name</h2>
        <dl>
            <dt class="text-lg font-semibold">Code</dt>
            <dd class="text-lg">@Model.Project.Code</dd>

            <dt class="text-lg font-semibold">Budget</dt>
            <dd class="text-lg">@Model.Project.Budget.ToString("C2", CultureInfo.CurrentCulture)</dd>

            <dt class="text-lg font-semibold">Remarks</dt>
            <dd class="text-lg">
                @if (string.IsNullOrEmpty(@Model.Project.Remarks))
                {
                    @EmptyRemarks
                }
                else
                {
                    @Model.Project.Remarks
                }
            </dd>
        </dl>
    </div>
    <div>
        <form method="POST" asp-controller="Projects" asp-action="Delete">
            <div>
                <input asp-for="@Model.Project.Id" type="hidden" class="form-control" />
                <input type="submit" value="Yes, Delete" class="btn btn-accent" />
                <a asp-controller="Projects" asp-action="ProjectDetails" asp-route-projectId="@Model.Project.Id" class="btn btn-neutral">Cancel</a>
            </div>
        </form>
    </div>
</div>

