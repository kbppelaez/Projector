@using Projector.Core.Projects.DTO
@using System.Globalization;
@model ProjectDetailsData

@{
    var EmptyRemarks = "None";
}

<h2 class="card-title">@Model.Name</h2>
<dl>
    <dt class="text-lg font-semibold">Code</dt>
    <dd class="text-lg">@Model.Code</dd>

    <dt class="text-lg font-semibold">Budget</dt>
    <dd class="text-lg">@Model.Budget.ToString("C2", CultureInfo.CurrentCulture)</dd>

    <dt class="text-lg font-semibold">Remarks</dt>
    <dd class="text-lg">
        @if (string.IsNullOrEmpty(@Model.Remarks))
        {
            @EmptyRemarks
        }
        else
        {
            @Model.Remarks
        }
    </dd>
</dl>
