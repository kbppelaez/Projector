@using Projector.Core.Projects.DTO
@using System.Globalization;
@model ProjectDetailsData

<div class="pr-card-header">
    <h3>@Model.Name</h3>
    @if (!string.IsNullOrEmpty(Model.Remarks))
    {
        <p>@Model.Remarks</p>    
    }
</div>
<div class="pr-card-content">
    <dl class="pr-description-list">
        <div>
            <dt>Code</dt>
            <dd>@Model.Code</dd>
        </div>
        <div>
            <dt>Budget</dt>
            <dd>@Model.Budget.ToString("C2", CultureInfo.CurrentCulture)</dd>
        </div>
    </dl>
</div>
