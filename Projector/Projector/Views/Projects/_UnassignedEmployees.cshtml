@using Projector.Core.Persons.DTO
@model UnassignedPersonsData

    @if (Model.Unassigned.Length == 0)
    {
        <div class="input-group">
            <select class="custom-select" id="addPerson" disabled style="width:50%">
                <option selected> No employee available </option>
            </select>
            <div class="input-group-append" style="width:50%">
                <button style="width:100%" class="btn btn-outline-secondary disabled" type="button">Add Employee to Project</button>
            </div>
        </div>
    }
    else
    {
        <form>
            <input type="hidden" id="projectId" name="projectId" value="@Model.UnassignedProjectId" />
            <div class="input-group">
                <select class="custom-select" id="addPerson" style="width:50%">
                    <option selected value="0">Choose Employee...</option>
                    @foreach (var employee in Model.Unassigned)
                    {
                        <option value="@employee.Id">@employee.FullName</option>
                    }
                </select>
                <div class="input-group-append" style="width:50%">
                <button style="width:100%" class="btn btn-primary" type="button" onclick="AddEmployee('@Url.Action("Assign", "Projects")')">Add Employee to Project</button>
                </div>
            </div>
            <span id="selectError" class="text-danger"></span>
        </form>
    }
